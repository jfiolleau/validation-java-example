{
  "info": {
    "name": "Validation Java Example - UserController",
    "_postman_id": "c0a4e0da-41e8-4c92-9f2e-3a8d4ef7a1b3",
    "description": "Postman collection to test the UserController /users endpoint (create user).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User - Valid",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+33123456789\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Body contains success message\", function () {",
              "  pm.expect(pm.response.text()).to.include(\"User is valid and accepted!\");",
              "});"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Create User - Invalid Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"not-an-email\",\n  \"phone\": \"+33123456789\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 400 (validation error)\", function () {",
              "  pm.response.to.have.status(400);",
              "});"
            ]
          }
        }
      ],
      "response": []
    },
